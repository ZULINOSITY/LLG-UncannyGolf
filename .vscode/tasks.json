{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar Juego SDL2",
            "type": "shell",
            "command": "g++",
            "args": [
                "main.cpp",
                "-I${workspaceFolder}/SDL2-2.32.10/x86_64-w64-mingw32/include",
                "-I${workspaceFolder}/SDL2_image-2.8.8/x86_64-w64-mingw32/include",

                "-I${workspaceFolder}/SDL2-2.32.10/x86_64-w64-mingw32/include/SDL2",

                "-L${workspaceFolder}/SDL2_image-2.8.8/x86_64-w64-mingw32/lib",
                "-L${workspaceFolder}/SDL2-2.32.10/x86_64-w64-mingw32/lib",


                "-lmingw32",
                "-lSDL2main",
                "-lSDL2",
                "-lSDL2_image",

                "-o",
                "${workspaceFolder}/juego.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:/TDM-GCC-64/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "C:/TDM-GCC-64/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Task generated by Debugger."
        }
    ]
}